/**
 * @description This ruleset enforces a strict admin-only access model for the bakery canteen system.
 * Only authenticated clients (via anonymous auth) can read and write data.
 * @dataStructure
 * - /users/{userId}: Stores user data, accessible only to authenticated clients.
 * - /orders/{orderNumber}: Stores order data, accessible only to authenticated clients.
 * - /inventory/{inventoryId}: Stores inventory data, accessible only to authenticated clients.
 * - /dashboard/canteen_dashboard: Stores dashboard data, accessible only to authenticated clients.
 * @keySecurityDecisions
 * - No user-level authorization is implemented as this is an admin-only system.
 * - All collections are restricted to authenticated clients only.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user data, accessible only to authenticated clients.
     * @path /users/{userId}
     * @allow (create, update, delete) - Authenticated client can create, update, and delete user data.
     * @allow (get, list) - Authenticated client can get and list user data.
     * @deny (create, update, delete) - Unauthenticated client cannot create, update, and delete user data.
     * @deny (get, list) - Unauthenticated client cannot get and list user data.
     * @principle Enforces authenticated access for user data management.
     */
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.id == userId;
      allow update: if isSignedIn() && resource != null && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Manages order data, accessible only to authenticated clients.
     * @path /orders/{orderNumber}
     * @allow (create, update, delete) - Authenticated client can create, update, and delete order data.
     * @allow (get, list) - Authenticated client can get and list order data.
     * @deny (create, update, delete) - Unauthenticated client cannot create, update, and delete order data.
     * @deny (get, list) - Unauthenticated client cannot get and list order data.
     * @principle Enforces authenticated access for order data management.
     */
    match /orders/{orderNumber} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Manages inventory data, accessible only to authenticated clients.
     * @path /inventory/{inventoryId}
     * @allow (create, update, delete) - Authenticated client can create, update, and delete inventory data.
     * @allow (get, list) - Authenticated client can get and list inventory data.
     * @deny (create, update, delete) - Unauthenticated client cannot create, update, and delete inventory data.
     * @deny (get, list) - Unauthenticated client cannot get and list inventory data.
     * @principle Enforces authenticated access for inventory data management.
     */
    match /inventory/{inventoryId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Manages dashboard data, accessible only to authenticated clients.
     * @path /dashboard/canteen_dashboard
     * @allow (create, update, delete) - Authenticated client can create, update, and delete dashboard data.
     * @allow (get) - Authenticated client can get dashboard data.
     * @allow (list) - Authenticated client can list dashboard data.
     * @deny (create, update, delete) - Unauthenticated client cannot create, update, and delete dashboard data.
     * @deny (get, list) - Unauthenticated client cannot get and list dashboard data.
     * @principle Enforces authenticated access for dashboard data management.
     */
    match /dashboard/canteen_dashboard {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    function isSignedIn() {
      return request.auth != null;
    }
  }
}