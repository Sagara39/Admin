/**
 * @file Firestore Security Rules for Bakery Canteen System
 *
 * @core_philosophy
 * This ruleset prioritizes ease of prototyping.  All authenticated users have full read and write
 * access to all data.  This is NOT a secure configuration for production but allows for rapid
 * development.
 *
 * @data_structure
 * - /users/{userId}: Stores user profiles, accessible only to the user themselves.
 * - /orders/{orderId}: Stores order information, accessible to any authenticated user.
 * - /inventory/{inventoryId}: Stores inventory information, accessible to any authenticated user.
 *
 * @key_security_decisions
 * - User listing is disallowed.
 * - All authenticated users can read and write to all collections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows any authenticated user to read and write user data.
     * @path /users/{userId}
     * @allow (create, update, delete, get, list) - Any authenticated user.
     * @deny (none) - This rule allows any authenticated user.
     * @principle Allows any authenticated user to read and write user data.
     */
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    /**
     * @description Allows any authenticated user to read and write order data.
     * @path /orders/{orderId}
     * @allow (create, update, delete, get, list) - Any authenticated user.
     * @deny (none) - This rule allows any authenticated user.
     * @principle Allows any authenticated user to read and write order data.
     */
    match /orders/{orderId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    /**
     * @description Allows any authenticated user to read and write inventory data.
     * @path /inventory/{inventoryId}
     * @allow (create, update, delete, get, list) - Any authenticated user.
     * @deny (none) - This rule allows any authenticated user.
     * @principle Allows any authenticated user to read and write inventory data.
     */
    match /inventory/{inventoryId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    function isSignedIn() {
      return request.auth != null;
    }
  }
}