/**
 * @fileoverview Firestore Security Rules for the bakery canteen system.
 *
 * Core Philosophy:
 * This ruleset allows any user to read and write any data.
 * This is configured based on instructions in the user request.
 *
 * Data Structure:
 * - /users/{userId}: Stores user data (name, credit_balance, last_order_no).
 * - /orders/{orderId}: Stores order data (user_id, items, amount, timestamp).
 * - /inventory/{inventoryId}: Stores inventory item data (name, price, current_amount, threshold).
 *
 * Key Security Decisions:
 * - Any user can read and write any document, since any authentication can perform any operation.
 *
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows any user to read and write user data.
     * @path /users/{userId}
     * @allow (get, list, create, update, delete) - Any user can perform all operations on any user document.
     * @deny None
     * @principle Allows all read and write access to user data.
     */
    match /users/{userId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows any user to read and write order data.
     * @path /orders/{orderId}
     * @allow (get, list, create, update, delete) - Any user can perform all operations on any order document.
     * @deny None
     * @principle Allows all read and write access to order data.
     */
    match /orders/{orderId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows any user to read and write inventory data.
     * @path /inventory/{inventoryId}
     * @allow (get, list, create, update, delete) - Any user can perform all operations on any inventory document.
     * @deny None
     * @principle Allows all read and write access to inventory data.
     */
    match /inventory/{inventoryId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }
  }
}